name: Atualizar calendário F1 2026

on:
  workflow_dispatch:
  schedule:
    - cron: "0 6 * * *" # roda todo dia às 06:00 UTC

permissions:
  contents: write

jobs:
  update-calendar:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout do repositório
        uses: actions/checkout@v4

      - name: Configurar Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Atualizar arquivo ICS
        run: |
          echo "Workflow executado em $(date)" >> f1_2026_brt.ics

      - name: Commit e push se houver mudanças
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"
          git add f1_2026_brt.ics
          git commit -m "Atualização automática calendário F1 2026" || echo "Sem alterações"
          git push
